# Database
DATABASE_URL=postgresql://fastfluence:fastfluence@postgres:5432/fastfluence

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ACTIVATION_TOKEN_EXPIRE_HOURS=24

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

# SendGrid Configuration (RECOMMENDED - Web API)
USE_SENDGRID_API=true
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SMTP_FROM_EMAIL=noreply@fastfluence.pl

# Alternative: SendGrid SMTP (if you prefer SMTP over Web API)
# USE_SENDGRID_API=false
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=SG.your-sendgrid-api-key-here
# SMTP_FROM_EMAIL=noreply@fastfluence.pl

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.eu.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_API_AUDIENCE=https://api.fastfluence.pl
AUTH0_CALLBACK_URL=http://localhost:5173/callback

# Alternative: Gmail SMTP
# USE_SENDGRID_API=false
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-gmail-app-password
# SMTP_FROM_EMAIL=noreply@fastfluence.pl

# Alternative: Mailgun SMTP
# USE_SENDGRID_API=false
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USERNAME=your-mailgun-username
# SMTP_PASSWORD=your-mailgun-password
# SMTP_FROM_EMAIL=noreply@fastfluence.pl

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000